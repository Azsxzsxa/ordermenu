<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:padding="@dimen/size_small">

    <TextView
        android:id="@+id/dialog_yesNo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_medium"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/dialog_text_color"
        android:textSize="16sp"
        tools:text="Your question to ask here" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_yesNo_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_medium"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_yesNo_yes_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="8dp"
            android:text="@string/dialog_yes" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_yesNo_No_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/dialog_no"
            app:cornerRadius="@dimen/button_corner_radius" />
    </LinearLayout>

</RelativeLayout>